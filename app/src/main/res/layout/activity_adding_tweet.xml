<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddingTweetActivity">

    <EditText
        android:id="@+id/AddTweetEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Tweet"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/addTweetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD TWEET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AddTweetEditText"/>

    <Button
        android:id="@+id/addPictureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD PICTURE"
        app:layout_constraintTop_toBottomOf="@+id/addTweetButton"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>